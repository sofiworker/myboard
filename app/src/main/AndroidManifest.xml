<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Myboard">

        <activity
            android:name=".ui.setup.SetupActivity"
            android:exported="true"
            android:label="@string/setup_wizard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/settings" />

        <activity
            android:name=".LayoutManagerActivity"
            android:exported="false"
            android:label="@string/layout_manager" />

        <activity
            android:name=".LayoutEditorActivity"
            android:exported="false" />
        
        <activity 
            android:name=".DictionaryManagerActivity"
            android:exported="false" />
            
        <activity 
            android:name=".UserDictionaryActivity"
            android:exported="false" />

        <activity
            android:name=".FuzzyPinyinSettingsActivity"
            android:exported="false" />

        <service
            android:name=".MyboardImeService"
            android:exported="true"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>
    </application>

</manifest>